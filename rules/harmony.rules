rule "Harmony Kamer Off"
when
        Item KamerHueSim changed from ON to OFF
then
	if( KamerScene.state > 0 ) {
		sendCommand(KamerScene, 0)
	}
end

rule "Harmony Kamer ON"
when
        Item KamerHueSim changed from OFF to ON
then
		sendCommand(KamerScene, 1)
end

